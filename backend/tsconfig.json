{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "node",
    "outDir": "./dist",          
    "esModuleInterop": true,      
    "forceConsistentCasingInFileNames": true,
    "strict": true,               
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "__tests__"]
}